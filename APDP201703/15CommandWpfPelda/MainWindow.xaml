<Window x:Class="_15CommandWpfPelda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_15CommandWpfPelda"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
  <Window.DataContext>  <!-- Itt adjuk meg a View alatti ViewModel-t -->
    <local:MainWindowViewModel />
  </Window.DataContext>
    <Grid>
      <ProgressBar Margin="10" Height="20" VerticalAlignment="Top" Value="{Binding ProgressValue}"/>
      <Button VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10" Content="Indítás" Padding="20" Click="Start_Click"/>
      <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Content="Leállítás" Padding="20" Click="Stop_Click"/>
    </Grid>
</Window>
